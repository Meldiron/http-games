{
    "name": "meldiron/http-games",
    "type": "project",
    "autoload": {
        "psr-4": {
            "HTTPGames\\": "src/"
        }
    },
    "scripts": {
      "dev": "php -S 0.0.0.0:8000 app/http.php",
      "lint": "./vendor/bin/pint --test",
      "format": "./vendor/bin/pint",
      "check": "./vendor/bin/phpstan analyse --level 8 src app",
      "test": "hurl --test --glob 'tests/**/*.hurl'"
    },
    "authors": [
        {
            "name": "Meldiron"
        }
    ],
    "require": {
        "php": ">=8.0",
        "utopia-php/framework": "0.33.*",
        "utopia-php/platform": "0.7.*",
        "appwrite/appwrite": "17.*.*",
        "vlucas/phpdotenv": "5.6.*",
        "utopia-php/validators": "0.0.*"
    },
    "require-dev": {
      "laravel/pint": "1.*.*",
      "phpstan/phpstan": "1.*.*"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "tbachert/spi": true
        },
        "platform": {
            "php": "8.4"
        }
    }
}
